---
interface Props {
	title: string;
	label: string;
}

const { title, label } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={label} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: white;
	}
	body,
	figure{
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}
	a {
		text-decoration: none;
		color: black;
	}
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}
	*, *::before, *::after {
		box-sizing: border-box;
	}
	h1, h2, h3, h4{
		margin: 0;
		font-family: Poppins;
	}
	p { 
		color: #666;
		font-size: 0.95rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
		font-family: Poppins;
	}

	a svg {
		pointer-events: none;
	}
	.print {
    	display: none !important;
	
    }

	@media print {
		.print{
			display: block !important;
		}

		.no-print{
			display: none !important;
		}
    }

</style>
